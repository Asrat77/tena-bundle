<h1>Labs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @labs.each do |lab| %>
      <tr>
        <td><%= lab.name %></td>
        <td><%= lab.location %></td>
        <td>
          <%= link_to 'View', lab, class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_lab_path(lab), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', lab, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Lab', new_lab_path, class: 'btn btn-primary' %>
