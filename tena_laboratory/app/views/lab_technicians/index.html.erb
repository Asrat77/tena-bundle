<h1>Lab Technicians</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Information</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lab_technicians.each do |lab_technician| %>
      <tr>
        <td><%= lab_technician.name %></td>
        <td><%= lab_technician.contact_info %></td>
        <td>
          <%= link_to 'View', lab_technician, class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_lab_technician_path(lab_technician), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', lab_technician, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Lab Technician', new_lab_technician_path, class: 'btn btn-primary' %>
