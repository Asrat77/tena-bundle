<h1>Patient Details</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= "#{@patient.first_name} #{@patient.last_name}" %></h5>
    <p class="card-text"><strong>Mobile Number:</strong> <%= @patient.mobile_number %></p>
    <p class="card-text"><strong>Email:</strong> <%= @patient.email %></p>
    <p class="card-text"><strong>Gender:</strong> <%= @patient.gender %></p>
    <p class="card-text"><strong>Doctor:</strong> <%= @patient.doctor.name if @patient.doctor %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_patient_path(@patient), class: 'btn btn-warning' %>
  <%= link_to 'Back', patients_path, class: 'btn btn-secondary' %>
</div>