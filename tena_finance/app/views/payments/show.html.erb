<h1>Payment Details</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Payment #<%= @payment.id %></h5>
    <p class="card-text"><strong>Sub Total:</strong> <%= number_to_currency(@payment.sub_total) %></p>
    <p class="card-text"><strong>Gross Total:</strong> <%= number_to_currency(@payment.gross_total) %></p>

  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit', edit_payment_path(@payment), class: 'btn btn-warning' %>
  <%= link_to 'Back to Payments', payments_path, class: 'btn btn-secondary' %>
</div>
